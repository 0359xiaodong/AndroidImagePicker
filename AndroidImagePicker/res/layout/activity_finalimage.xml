<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">
    <RelativeLayout 
	    android:id="@+id/crop_layout"
	    android:layout_centerInParent="true"
	    android:layout_width="444dip"
    	android:layout_height="317dip"
	    android:background="@drawable/touxiang_jiemiankuang">
	    <com.renyu.android_image_picker.myview.CropImageView3
	        android:id="@+id/finalimage_cropImg"
	        android:layout_marginTop="70dip"
	        android:layout_marginBottom="40dip"
	        android:layout_marginLeft="20dip"
	        android:layout_marginRight="20dip"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"/>
	    <Button 
	        android:id="@+id/finalimage_ok"
			android:background="@drawable/touxiang_queding"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"/>
	</RelativeLayout>
    <ImageView 
        android:id="@+id/crop_close"
        android:layout_alignRight="@id/crop_layout"
        android:layout_marginTop="20dip"
        android:src="@drawable/touxiang_guanbi"
    	android:layout_width="wrap_content"
   		android:layout_height="wrap_content"/>
</RelativeLayout>
